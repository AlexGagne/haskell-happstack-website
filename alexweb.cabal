-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.10

library
  exposed-modules:     
      AlexHtml
    , AlexCss    
  build-depends:       base                >= 4.8    && <4.9
                     , blaze-html
                     , bytestring
                     , clay
                     , cmdargs
                     , directory
                     , happstack-server    >= 7.3
                     , text
                     -- buildpack to choose the modern mtl dependency.
                     , mtl                 >= 2.1.2
  hs-source-dirs:      src
  default-language:    Haskell2010

executable server
  main-is:             Server.hs
  build-depends:       base >=4.8 && <4.9
                     , alexweb
  hs-source-dirs:      exe
  default-language:    Haskell2010
  
